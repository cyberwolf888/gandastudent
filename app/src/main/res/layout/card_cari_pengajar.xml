<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvCariPengajar"
    android:background="@color/colorNormalWhite"
    app:cardBackgroundColor="@color/colorNormalWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        //Photo pengajar
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:id="@+id/imageTeacher"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        //Nama pengajar
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teacherName"
            android:text="I Nyoman Swantara S.Kom"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|center"
            android:layout_toRightOf="@+id/imageTeacher"
            />

        //Label mapel
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelMapel"
            android:text="Bhs.Inggris"
            android:layout_gravity="top|center"
            android:layout_below="@id/teacherName"
            android:layout_toRightOf="@+id/imageTeacher"
            android:layout_marginLeft="10dp"
            />

        //Hari
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Hari"
            android:text="Hari: "
            android:layout_gravity="top|center"
            android:layout_below="@id/tvLabelMapel"
            android:layout_toRightOf="@+id/imageTeacher"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHari"
            android:text="Senin"
            android:layout_gravity="top|center"
            android:layout_below="@id/tvLabelMapel"
            android:layout_toRightOf="@+id/Hari"
            />

        //Waktu mulai
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WaktuMulai"
            android:text="Waktu Mulai: "
            android:layout_gravity="top|center"
            android:layout_below="@id/tvHari"
            android:layout_toRightOf="@+id/imageTeacher"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWaktuMulai"
            android:text="12.00"
            android:layout_gravity="top|center"
            android:layout_below="@id/tvHari"
            android:layout_toRightOf="@+id/WaktuMulai"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" WITA"
            android:layout_gravity="top|center"
            android:layout_below="@id/tvHari"
            android:layout_toRightOf="@+id/tvWaktuMulai"
            />

        //Waktu selesai
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WaktuSelesai"
            android:text="Waktu Selesai: "
            android:layout_gravity="top|center"
            android:layout_below="@id/WaktuMulai"
            android:layout_toRightOf="@+id/imageTeacher"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWaktuSelesai"
            android:text="13.00"
            android:layout_gravity="top|center"
            android:layout_below="@id/WaktuMulai"
            android:layout_toRightOf="@+id/WaktuSelesai"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" WITA"
            android:layout_gravity="top|center"
            android:layout_below="@id/WaktuMulai"
            android:layout_toRightOf="@+id/tvWaktuSelesai"
            />

        //Tempat
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tempat"
            android:text="Tempat: "
            android:layout_gravity="top|center"
            android:layout_below="@id/WaktuSelesai"
            android:layout_toRightOf="@+id/imageTeacher"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTempat"
            android:text="Cabang Renon"
            android:layout_gravity="top|center"
            android:layout_below="@id/WaktuSelesai"
            android:layout_toRightOf="@+id/Tempat"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
