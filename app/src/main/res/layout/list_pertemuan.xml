<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/latar">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/cardView"
        android:background="@color/colorNormalWhite"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lectureName"
            android:text="Bahasa Inggris"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studentPlace"
            android:text="Senin, 11 Juli 2014"
            android:textSize="18dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/arrowDetail"
            android:src="@drawable/arrow_detail"
            android:background="@color/colorPrimary"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            />
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTryPertemuan"
        android:layout_below="@id/cardView"
        android:layout_centerHorizontal="true"
        android:text="Try"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonround"
        android:textColor="@color/colorTextButton"
        />
</RelativeLayout>