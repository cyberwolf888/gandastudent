<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pembayaran_transfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:orientation="vertical"
    tools:context="com.gandaedukasi.gandaedukasi.PembayaranTransferActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:id="@+id/textView"
        android:textColor="@color/colorNormalWhite"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Silahkan pilih bukti pembayaran"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imgBukti"
        android:layout_below="@+id/textView"
        android:src="@drawable/image_add"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBukti"
        android:id="@+id/btnSubmit"
        android:elevation="1dp"
        android:layout_centerHorizontal="true"
        android:maxWidth="300dp"
        android:background="@drawable/buttonround"
        android:visibility="visible"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
</RelativeLayout>
