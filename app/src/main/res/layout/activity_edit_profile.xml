<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardView"
            android:background="@color/cardview_light_background"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/guest"
                android:id="@+id/studentPhoto"
                android:layout_marginTop="5dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:id="@+id/layoutStudentName"
                android:gravity="center">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/studentName"
                    android:text="I Nyoman Swantara"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="110dp"
                    android:textSize="18dp"
                    android:textColorHighlight="@color/colorNormalWhite"
                    android:textColorHint="@color/colorNormalWhite"
                    android:gravity="center"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="10dp"
            android:id="@+id/separator1"
            />

        //TTL
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TTL"
            android:text="Tempat Tanggal Lahir"
            android:layout_below="@+id/separator1"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studentTTL"
            android:text="Tangeb, 22 Januari 1995"
            android:layout_below="@+id/TTL"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorNormalWhite"
            android:textColorHighlight="@color/colorNormalWhite"
            android:textColorHint="@color/colorNormalWhite"
            />
        -->
        //School
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="7dp"
            android:id="@+id/separator2"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator2"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutSchool">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Institusi Pendidikan Terakhir"
                android:id="@+id/studentSchool"
                android:text="SMA N 2 Mengwi"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        //Address
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/layoutSchool"
            android:layout_marginTop="7dp"
            android:id="@+id/separator3"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator3"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutAddress">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:id="@+id/studentAddress"
                android:text="Lingkungan Cempaka Kapal No. 57"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        //Parent
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/layoutAddress"
            android:layout_marginTop="7dp"
            android:id="@+id/separator4"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator4"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutParent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Orang Tua / Wali"
                android:id="@+id/studentParent"
                android:text="I Wayan Darma"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        //Phone
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/layoutParent"
            android:layout_marginTop="7dp"
            android:id="@+id/separator5"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator5"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutPhone">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. Telp"
                android:id="@+id/studentPhone"
                android:text="085338328908"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        //Email
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/layoutPhone"
            android:layout_marginTop="7dp"
            android:id="@+id/separator6"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator6"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutEmail">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/studentEmail"
                android:text="bocah_linuxer@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        //Password
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorNormalWhite"
            android:layout_below="@+id/layoutEmail"
            android:layout_marginTop="7dp"
            android:id="@+id/separator7"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separator7"
            android:layout_marginTop="7dp"
            android:id="@+id/layoutPassword">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/studentPassword"
                android:text="bocah_linuxer"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:textColor="@color/colorNormalWhite"
                android:textColorHighlight="@color/colorNormalWhite"
                android:textColorHint="@color/colorNormalWhite"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:text="Save"
            android:layout_below="@+id/layoutPassword"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonround"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>

</ScrollView>
